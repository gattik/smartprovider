<div class="container">
  <div class="map_container" style="background-image:url('<%= asset_path "tablet.jpg" %>'); height:300px; background-size:100%;">
  </div>
  <h1>Latest Notes</h1>
 	<%= render "layouts/client_dashboard" %>
 	<hr>
  <br /> <br />

  <div class="row"> 
   <div class="col-lg-8" style="float:left;">
		<% @current_user.clients.each do |client| %>
		<% client.notes.each do |note| %>    
				<div class="photo">
					<%= image_tag client.image %>
				</div>
				<div class="span6">
					<% full_name = client.first_name + " " + client.last_name %>
					<b><%= link_to full_name, client_path(client)%></b></br>
					<b>Title:</b> <%= link_to note.title, note_path(note) %><br />
					<b>Note:</b>
					<%= note.description %></br>
					<b>Created at:</b> <%= note.created_at.strftime("%m/%d/%Y at %I:%M%p") %>
					<br /><br /><br />
					<hr>
				</div>
		<% end %> 
		<% end %>
		</div>

    <div class="col-lg-3 well" style="float:right;">
      <h4>My Follow-ups</h4>
      <table class="table">
        <tbody>
          <tr>
            <td><b>Task<b></td>
            <td><b>Complete<b></td>
          </tr>
            <% @current_user.follow_ups.each do |follow_up| %>
          <tr>
            <td><%= follow_up.task %></td>
            <td><%= link_to "Click to complete task", follow_up_path(follow_up, follow_up: { completed: true }), method: :patch %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>  
  </div>  
</div>
<br>
<br>

<script>
  $('.nav a:contains("Notes")').parent().addClass('active');
</script>
<%= yield :scripts %>



