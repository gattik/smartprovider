<%= form_for @user, url: login_path do |f| %>
<%= flash[:error] %>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email, class: 'txtfield' %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password, class: 'txtfield' %>
  </div>
  <div><%= f.submit "Login", class: "btn btn-primary" %></div>
<% end %>