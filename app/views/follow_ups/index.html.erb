<div class="container">
  <img src="<%= asset_path "followup.jpg" %>" alt="Nurse" width="100%" height="300">
  <h1>Latest Follow-ups</h1>
  <%= render "layouts/client_dashboard" %>
  <hr>
  <br /> <br />

  <div class="row">    
    <div class="col-lg-8" style="float:left;">
      <table class="table" >
        <p>What is going on with my clients</p>
        	  <h3>Follow-ups</h3>
				<tbody>
				  <tr>
						<td><b>Task<b></td>
						<td><b>Note<b></td>
						<td><b>Client<b></td>
						<td><b>Completed<b></td>
						<td><b>Date Created<b></td>
					</tr>
						<% @follow_ups.each do |follow_up| %>
					<tr>
						<td><%= follow_up.task %></td>
						<td><%= link_to follow_up.note.title, client_note_path(follow_up.note.client_id, follow_up.note_id) %></td>
						<td><%= link_to "#{follow_up.note.client.first_name} #{follow_up.note.client.last_name}", client_path(follow_up.note.client) %></td>
						<td><%= follow_up.completed %></td>
						<td><%= follow_up.created_at.strftime("%m/%d/%Y") %></td>
          </tr>
            <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-3 well" style="float:right;">
      <h4>My Follow-ups</h4>
      <table class="table">
        <tbody>
          <tr>
            <td><b>Task<b></td>
            <td><b>Complete<b></td>
          </tr>
            <% @current_user.follow_ups.each do |follow_up| %>
          <tr>
            <td><%= follow_up.task %></td>
            <td><%= link_to "Click to complete task", follow_up_path(follow_up, follow_up: { completed: true }), method: :patch %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>  
  </div>  
</div>
<br>
<br>

<script>
  $('.nav a:contains("Follow-ups")').parent().addClass('active');
</script>

<%= yield :scripts %>
