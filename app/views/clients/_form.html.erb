<div class="container" >
	<h1>New Client</h1>
	<div class="span6" style="width:70%; float:left;">
	<%= form_for @client, html: {multipart: true} do |f| %>
	<%= f.error_messages %>

	<div>First Name 
		<br>
		<%= f.text_field :first_name %></div>
	<div>Last Name
    <br>
    <%= f.text_field :last_name %></div>
  <div>Date of Birth
    <br>
    <%= f.date_select :date_of_birth, start_year: 1900, end_year: 2013 %></div>
  <div>Gender: 
		<br>
		<%=  f.select(:gender,[['Male', 'Male'], ['Female', 'Female']]) %></div>
	<div>Health Card Number (ten numbers and two letter verification code)
		<br>
	  <%= f.text_field :hcn %></div>
	<div>Physician 
		<br>
		<%= f.text_field :physician %></div>
	<div>Physician Phone 
		<br>
		<%= f.text_field :physician_phone %></div>
	<div>Diagnosis Information 
		<br>
		<%= f.text_area :diagnosis %></div>
	<div>Advanced Directives
		<br>
		<%= f.text_area :advanced_directives %></div>
  <div>Street Address 
    <br>
    <%= f.text_field :street %></div> 
  <div>City
    <br>
    <%= f.text_field :city %></div>
  <div>Province
		<br>
		<%= f.text_field :province %></div>
	<div>Contact Name 
		<br>
		<%= f.text_field :contact_name %></div>
  <div>Contact Relationship 
  	<br>
  	<%= f.text_field :contact_relationship %></div>
  <div>Contact Phone 
    <br>
    <%= f.text_field :contact_phone %></div>
    <br>
  <div>Upload Image 
  	<br>
  	<%= f.file_field :image %></div>
  	<br>
  <div><%= f.submit "Save", class: "btn btn-primary" %></div>
<% end %>
