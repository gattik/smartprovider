<div class="container" >
  <h1>New Client</h1>
  <%= simple_form_for @client, html: {multipart: true} do |f| %>
  <%= f.error_notification %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :date_of_birth, :as => :date, :start_year => Date.today.year,:end_year => 1900,:order => [ :day, :month, :year], :required => true %>
  <%= f.input :gender, collection: ["Male", "Female"] %>
  <%= f.input :hcn,hint: "e.g. 1234567890GH",label: "Health Card" %>
  <%= f.input :physician %>
  <%= f.input :physician_phone %>
  <br>
  <%= f.input :diagnosis %>
  <%= f.input :advanced_directives %>
  <%= f.input :street %>
  <%= f.input :city %>
  <%= f.input :province %>
  <%= f.input :contact_name %>
  <%= f.input :contact_relationship %>
  <br>
  <%= f.input :contact_phone %>
  <%= f.input :image %>
  <%= f.error :base %>
  <br>
  <%= f.button :submit, class: "btn btn-success"%>
  <br>
  <br>

  <% end %>
</div>
<hr>