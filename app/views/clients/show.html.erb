<div class="container">
  <div class="row">
    <div class="col-lg-9" style="float:left">  
  		<h1> <%= @client.first_name %> </h1>
    </div>
  	<%= render "layouts/client_dashboard" %>  
    <div class="col-lg-9" style="float:left">
      <h3>Notes</h3>
        <label class="control-label">Add a new note:</label>

        <% if flash[:notice] %>
					<h3><span class="label label-success">
	  				<%= flash[:notice] %>
	  			</span></h3>
				<% elsif flash[:error] %>
					<h3><span class="label label-danger">
  					<%= flash[:error] %>
  				</span></h3>
				<% end %>
				
        <%= form_for [@client, Note.new] do |f| %>
				<div style="width: 200px"> Title <br> <%= f.text_field :title, class: 'txtfield'%></div>
			  <div> Description <br> <%= f.text_area :description, rows: 4, cols: 80, class: 'textarea' %></div> <br>
			   <%= f.submit "Add Note", class: "btn btn-small btn-primary" %>
			<% end %>
      <br>
      <br>
      <h4>Recent Notes</h4>
				<table class="table" style="float:left;">
					<tbody>
					  <tr>
							<td><b>Title<b></td>
							<td><b>Note<b></td>
							<td><b>Date<b></td>
						</tr>
							<% @client.notes.each do |note| %>
							<tr>
								<td><%= link_to note.title, client_note_path(note.client_id, note.id) %></td>
								<td style="width:400px;"><%= note.description %></td>
								<td><%= note.created_at.strftime("%m/%d/%Y") %></td>
							</tr>
							<% end %>
					</tbody>
				</table>
			<hr>
			<h4>Recent Follow-ups</h4>
				<table class="table" style="float:left;">
					<tbody>
					  <tr>
							<td><b>Task<b></td>
							<td><b>Note<b></td>
							<td><b>Date Created<b></td>
							<td><b>Completed<b></td>
							<td><b>Click to complete!<b></td>
						</tr>
							<% @client.notes.each do |note| %>
							<% note.follow_ups.each do |follow_up| %>
						<tr>
							<td><%= follow_up.task %></td>
							<td><%= link_to follow_up.note.title, client_note_path(follow_up.note.client_id, follow_up.note_id) %></td>
							<td><%= follow_up.created_at.strftime("%m/%d/%Y") %></td>
							<td><%= follow_up.completed %></td>
							<td><%= link_to "Click to complete task", follow_up_path(follow_up, follow_up: { completed: true }), method: :patch %></td>
						</tr>
							<% end %>
							<% end %>
					</tbody>
	      </table>
		</div>
			<%= render 'clients/client_info' %> 
			<br>   
  </div>
</div>


<script>
  $('.nav a:contains("Notes")').parent().addClass('active');
</script>



<%= yield :scripts %>
