
<div class="col-lg-3" style="float:right; background-color:#eeeeee; height: 100%;">
  <br>
  <div class="photo">
    <%= image_tag @client.image %>
  <div>
    <h4 style="clear: both;">Client info</h4>
    <b class="text-left">Follow-ups</b>
    <% @client.notes.each do |note| %>
    <div>
      <% note.follow_ups.each do |follow_up| %>
      <%= follow_up.task %>
      <%= follow_up.completed %>
      <%= link_to "Click to complete", follow_up_path(follow_up, follow_up: { completed: true }), method: :patch %>
    </div>
      <% end %>
      <% end %>
    <hr>
    <p><b>Health Card:</b> <%= @client.hcn %></p>
    <p><b>Physician: </b><%= @client.physician %></p>
    <p><b>Physician Phone: </b><%= @client.physician_phone %></p>
    <p><b>Diagnosis: </b><%= @client.diagnosis %></p>
    <p><b>Advanced Directives: </b><%= @client.advanced_directives %></p>
    <p><b>Address: </b><%= @client.address %></p>
    <p><b>Contact: </b><%= @client.contact_name %></p>
    <p><b>Contact Relationship: </b><%= @client.contact_relationship %></p>
    <p><b>Contact Phone: </b><%= @client.contact_phone %></p>
    <%= link_to 'Edit', edit_client_path(@client), method: :get, class: "btn btn-small btn-success" %>
  </div>
  <div>
  <%= render 'add_user_to_client' %>
  </div>
</div>