    <%= form_for @user, url: login_path do |f| %>
    <div style="float:left;">
      <%= f.label :email %>
    </div>
      <br>
    <div>
      <%= f.text_field :email, class: 'txtfield'%>
    </div>
    <div style="float:left;">
      <%= f.label :password %>
    </div>
      <br>
    <div>
      <%= f.password_field :password, class: 'txtfield' %>
    </div>
    <br>
    <div><%= f.submit "Login", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div></center>
